<div class="row pt-2">
  <div class="col-12" data-controller="playlists-play" data-playlists-play-url="<%= next_playlist_path %>">
    <h5>
      <%= link_to 'Playlists', playlists_path, remote: true %>
      &gt;
      <%= @playlist.name %>
    </h5>
    <table class="table table-striped table-hover table-bordered table-sm">
      <thead>
        <tr>
          <td>&nbsp;</td>
          <td>Song</td>
          <td>Artist</td>
          <td>Album</td>
          <td>Length</td>
        </tr>
      </thead>
      <tbody>
        <% @playlist.mp3s.each do |mp3| %>
          <tr>
            <td class="text-end"><%= 'âžœ' if mp3.id == session[:current_mp3_id] %></td>
            <td><%= mp3.title %></td>
            <td><%= mp3.artist %></td>
            <td><%= mp3.album %></td>
            <td><%= mp3.duration %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
