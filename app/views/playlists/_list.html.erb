<table class="table table-striped table-hover table-bordered table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% playlists.each do |playlist| %>
      <tr class="align-middle">
        <td><%= playlist.name %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist), remote: true, class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
