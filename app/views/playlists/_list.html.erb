<div class="pt-2">
  <h5>Playlists</h5>
  <table class="table table-striped table-hover table-bordered table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>MP3s</th>
        <th class="col-1">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% playlists.each do |playlist| %>
        <tr class="align-middle">
          <td><%= playlist.name %></td>
          <td><%= playlist.playlist_mp3s.size %></td>
          <td>
            <%= link_to 'Edit', edit_playlist_path(playlist), remote: true, class: 'btn btn-primary btn-sm' %>
            <% if playlist.playlist_mp3s.size > 0 %>
              <%= link_to 'Play', play_playlist_path(playlist), remote: true, class: 'btn btn-primary btn-sm' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
