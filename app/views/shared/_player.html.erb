<div class="row pt-2" data-controller="playlists-player" data-playlists-player-url="<%= next_playlist_path(@current_playlist) %>">
  <div class="col-8 text-center">
    <div class="row pt-4">
      <div class="col-2"></div>
      <div class="col-2 text-center pt-2">
        <%= link_to 'Prev', prev_playlist_path(@current_playlist), remote: true %>
      </div>
      <div class="col-4 text-center align-middle">
        <% if defined?(mp3) %>
          <audio controls autoplay src="<%= src_mp3_path(mp3) %>" preload="auto">
            Your browser does not support the <code>audio</code> element.
          </audio>
        <% end %>
      </div>
      <div class="col-2 text-center pt-2">
        <%= link_to 'Next', next_playlist_path(@current_playlist), remote: true %>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
  <div class="col-4">
    <% if defined?(mp3) %>
      <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <td class="col-1 text-end fw-bold">Artist</td>
            <td><%= mp3.artist.name %></td>
          </tr>
          <tr>
            <td class="text-end fw-bold">Album</td>
            <td><%= mp3.album.name %></td>
          </tr>
          <tr>
            <td class="text-end fw-bold">Title</td>
            <td><%= mp3.title %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
