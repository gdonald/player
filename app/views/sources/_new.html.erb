<div class="row mt-3">
  <div class="col">
    <h5>New Source</h5>
    <div class="card">
      <div class="card-body">
        <%= simple_form_for source, method: :post, remote: true do |f| %>
          <div class="mb-3">
            <%= f.input :path, class: 'form-control' %>
          </div>
          <div>
            <%= f.submit 'Create', class: 'btn btn-primary btn-sm' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
