<div class="mt-3">
  <div class="row">
    <div class="col-6">
      <h5>Sources</h5>
    </div>
    <div class="col-6 text-end">
      <%= link_to 'New', new_source_path, remote: true, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
  <table class="table table-striped table-hover table-bordered table-sm">
    <thead>
      <tr>
        <th>Path</th>
        <th>MP3s</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% sources.each do |source| %>
        <tr class="align-middle">
          <td><%= source.path %></td>
          <td><%= source.mp3s.size %>
          <td class="col-1">
            <%= link_to 'Edit', edit_source_path(source), remote: true, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Scan', sync_source_path(source), remote: true, class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
