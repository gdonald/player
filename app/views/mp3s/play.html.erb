<table data-controller="mp3-play" class="table table-striped table-bordered">
  <tbody>
    <tr>
      <td class="col-6 text-end">Artist</td>
      <td><%= @mp3.artist %></td>
    </tr>
    <tr>
      <td class="text-end">Album</td>
      <td><%= @mp3.album %></td>
    </tr>
    <tr>
      <td class="text-end">Title</td>
      <td><%= @mp3.title %></td>
    </tr>
    <tr>
      <td colspan="2" class="text-center">
        <audio controls autoplay src="<%= src_mp3_path(@mp3) %>">
          Your browser does not support the <code>audio</code> element.
        </audio>
      </td>
    </tr>
  </tbody>
</table>
